{
  "name": "@oviirup/envalid",
  "version": "0.1.0",
  "type": "module",
  "description": "Validate environment variables with zod in Next.JS",
  "repository": {
    "type": "git",
    "url": "https://github.com/oviirup/envalid"
  },
  "author": "Avirup Ghosh",
  "license": "MIT",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./presets": {
      "types": "./dist/presets.d.ts",
      "import": "./dist/presets.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "zod",
    "env validation"
  ],
  "scripts": {
    "build": "bunchee -m --external zod",
    "dev": "bunchee -w --no-clean",
    "format": "prettier . -w -u --cache"
  },
  "peerDependencies": {
    "typescript": ">=5",
    "zod": " >=3"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2",
    "@types/node": "^20",
    "bunchee": "^5",
    "picocolors": "^1",
    "prettier": "^3",
    "prettier-plugin-jsdoc": "^1.3",
    "prettier-plugin-pkg": "^0.18",
    "typescript": "^5",
    "zod": "^3"
  }
}
