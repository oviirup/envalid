{
  "name": "@oviirup/envalid",
  "version": "0.1.1",
  "type": "module",
  "description": "Validate environment variables with zod in Next.JS",
  "repository": {
    "type": "git",
    "url": "https://github.com/oviirup/envalid"
  },
  "author": "Avirup Ghosh",
  "license": "MIT",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./presets": {
      "types": "./dist/presets.d.ts",
      "default": "./dist/presets.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "zod",
    "env validation"
  ],
  "scripts": {
    "build": "bunchee -m",
    "dev": "bunchee -w --no-clean",
    "format": "prettier . -w -u --cache"
  },
  "peerDependencies": {
    "typescript": ">=5",
    "zod": " >=3"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "~0.5.0",
    "@changesets/cli": "~2.27.10",
    "@types/node": "~20.17.9",
    "bunchee": "~5.6.2",
    "picocolors": "~1.1.1",
    "prettier": "~3.4.1",
    "prettier-plugin-jsdoc": "~1.3.0",
    "prettier-plugin-pkg": "~0.18.1",
    "typescript": "~5.7.2",
    "zod": "~3.23.8"
  }
}
